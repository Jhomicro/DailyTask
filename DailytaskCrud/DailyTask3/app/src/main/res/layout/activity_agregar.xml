<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6053F2"
    tools:context=".Agregar">

    <LinearLayout
        android:layout_width="323dp"
        android:layout_height="620dp"
        android:background="#D9D9D9"
        android:orientation="vertical"
        android:padding="10dp"
        android:paddingBottom="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/Ntarea"
            android:layout_width="280dp"
            android:layout_height="56dp"
            android:layout_margin="10dp"
            android:text="Nueva tarea"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="50dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Nombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="Nombre"
                android:textColor="#000000"
                android:textSize="20dp" />

            <androidx.constraintlayout.utils.widget.ImageFilterButton
                android:id="@+id/Anombre"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleType="centerCrop"
                app:srcCompat="@android:drawable/ic_menu_help" />
        </LinearLayout>

        <EditText
            android:id="@+id/editTextTextPersonName"
            android:layout_width="280dp"
            android:layout_height="42dp"
            android:background="@drawable/borde1"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Ingresa el nombre de la tarea" />

        <LinearLayout
            android:layout_width="151dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/descripcion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="Descripción"
                android:textColor="#000000"
                android:textSize="20dp"
                tools:ignore="DuplicateIds" />

            <androidx.constraintlayout.utils.widget.ImageFilterButton
                android:id="@+id/ADescription"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleType="centerCrop"
                app:srcCompat="@android:drawable/ic_menu_help" />
        </LinearLayout>

        <EditText
            android:id="@+id/editTextTextPersonName2"
            android:layout_width="280dp"
            android:layout_height="42dp"
            android:background="@drawable/borde1"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Ingresa una descripción corta" />

        <LinearLayout
            android:layout_width="152dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Categoria"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="Categoria"
                android:textColor="#000000"
                android:textSize="20dp"
                tools:ignore="DuplicateIds" />

            <androidx.constraintlayout.utils.widget.ImageFilterButton
                android:id="@+id/ACategoria"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleType="centerCrop"
                app:srcCompat="@android:drawable/ic_menu_help" />
        </LinearLayout>

        <com.google.android.material.chip.ChipGroup
            android:layout_width="303dp"
            android:layout_height="39dp">

        </com.google.android.material.chip.ChipGroup>

        <LinearLayout
            android:layout_width="87dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Fecha"
                android:layout_width="64dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="Fecha"
                android:textColor="#000000"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/AFecha"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleType="centerCrop"
                app:srcCompat="@android:drawable/ic_menu_help" />

        </LinearLayout>

        <EditText
            android:id="@+id/editTextDate3"
            android:layout_width="299dp"
            android:layout_height="34dp"
            android:ems="10"
            android:inputType="date" />

        <LinearLayout
            android:layout_width="87dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Hora"
                android:layout_width="51dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="Hora"
                android:textColor="#000000"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleType="centerCrop"
                app:srcCompat="@android:drawable/ic_menu_help" />
        </LinearLayout>

        <EditText
            android:id="@+id/editTextTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="time" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/Agregar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/agregar"
                android:text="Agregar"
                android:textColor="#000000" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:id="@+id/Cancelar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/agregar"
                android:text="Cancelar"
                android:textColor="#000000" />
        </LinearLayout>

    </LinearLayout>

    <ImageButton
        android:id="@+id/Bretroceder"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/retrocerder"
        android:scaleType="centerCrop"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>