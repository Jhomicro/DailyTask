<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#9FADF8"
    tools:context=".Registrate">

    <ImageButton
        android:id="@+id/Bretroceder"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/retrocerder"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:layout_width="323dp"
        android:layout_height="620dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="64dp"
        android:background="#D9D9D9"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/registrate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Registrate"
            android:textColor="#000000"
            android:textSize="50sp" />

        <TextView
            android:id="@+id/ncorreo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="1dp"
            android:paddingTop="5dp"
            android:paddingBottom="7dp"
            android:text="Correo:"
            android:textColor="#000000"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/correo"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/dorde"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:paddingStart="5dp"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="7dp"
            android:text="Contraseña:"
            android:textColor="#000000"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/contraseña"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/dorde"
            android:ems="10"
            android:inputType="textAutoCorrect|numberSigned|datetime|textWebEmailAddress|textPersonName|text|numberDecimal|numberPassword" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="7dp"
            android:text="Nombre:"
            android:textColor="#000000"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/editTextTextPersonName4"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/dorde"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="7dp"
            android:text="Apellido:"
            android:textColor="#000000"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/editTextTextPersonName5"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/dorde"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="7dp"
            android:text="Fecha de nacimiento:"
            android:textColor="#000000"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/editTextTextPersonName6"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/dorde"
            android:ems="10"
            android:inputType="textPersonName" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <Button
            android:id="@+id/lanzar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/agregar"
            android:gravity="center"
            android:text="Completado"
            android:textColor="#000000" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>